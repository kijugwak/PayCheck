<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 기본 앱 테마 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 기본 색상 설정 -->
        <item name="colorPrimary">@color/black</item>
        <!-- 상태 바 색상 설정 -->
        <item name="android:statusBarColor">@color/black</item>
    </style>


    <!-- 스플래시 스크린 테마 -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
    </style>
    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CustomTimePickerDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:background">#000000</item> <!-- 검은색 배경 -->
        <item name="android:textColorPrimary">#FFFFFF</item> <!-- 흰색 텍스트 -->
        <item name="android:textColorSecondary">#FFFFFF</item> <!-- 흰색 텍스트 -->
        <item name="android:colorAccent">#FFFFFF</item> <!-- 흰색 강조 색상 -->
    </style>


</resources>
